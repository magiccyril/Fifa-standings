{% extends 'DivonaStandingsBundle::layout_double.html.twig' %}

{% block page_header %}
    <h1>Standings <small>of this month</small></h1>
{% endblock %}

{% block content %}
    <table class="zebra-striped">
        <tr>
            <th>#</th>
            <th>Username</th>
            <th>Played</th>
            <th>Wins</th>
            <th>Draws</th>
            <th>Losses</th>
            <th>Goal average</th>
            <th>Points</th>
            <th>Points per game</ht>
        </tr>
        {% for row in standing %}
            <tr>
                <td>#</td>
                <td>{{row.player.username}}</td>
                <td>{{row.played}}</td>
                <td>{{row.win}}</td>
                <td>{{row.draw}}</td>
                <td>{{row.lose}}</td>
                <td>{{row.goalaverage}}</td>
                <td>{{row.points}}</td>
                <td>{{row.point_per_games}}</td>
            </tr>
    {% else %}
        <tr><td>There are no games entries.</td></tr>
    {% endfor %}
    </table>
{% endblock %}